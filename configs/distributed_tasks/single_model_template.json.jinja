{
  "trainTasks": [
    {
      "type": "distributed",
      "lambda": 1.5,
      "preemptJobs": false,
      "jobClassParameters": [
        {
          "classProbability": 0.1,
          "priorities": [
            {
              "priority": 1,
              "probability": 0.9
            },
            {
              "priority": 0,
              "probability": 0.1
            }
          ],
          "networkConfiguration": {
            "network": "{{ model }}",
            "lossFunction": "CrossEntropyLoss",
            "dataset": "{{ dataset }}"
          },
          "systemParameters": {
            "dataParallelism": {{ parallelism }},
            "configurations": {
              "default": {
                "cores": "{{ core }}",
                "memory": "{{ memory }}"
              }
            }
          },
          "hyperParameters": {
            "default": {
              "totalEpochs": 5,
              "batchSize": 100,
              "testBatchSize": 250,
              "learningRateDecay": 0.0002,
              "optimizerConfig": {
                "type": "AdamW",
                "betas": [
                  0.9,
                  0.999
                ],
                "learningRate": 0.003,
                "weight_decay": 0.1
              },
              "schedulerConfig": {
                "schedulerStepSize": 50,
                "schedulerGamma": 0.5,
                "minimumLearningRate": 1e-10
              }
            },
            "configurations": {
              "Master": null,
              "Worker": null
            }
          },
          "learningParameters": {
            "cuda": false
          }
        }
      ]
    }
  ]
}